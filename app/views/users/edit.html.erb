<div>
  <%= flash[:notice] %>
</div>

<div class="container">
  <div class="row">flex
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>

<%= form_with model: @user, url:edit_user_path(@user.id), method: :patch do |f| %>
  <div class="form-group">
    <label for="inputName">Name</label>
    <a><%= f.text_field :name %></a>
  </div>

  <div class="form-group">
  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, accept: "image/*" %>
  </div>

  <div class="form-group">
  <label for="inputIntroduction">Introduction</label>
  <%= f.text_area :introduction %>
  </div>

  <%= f.submit "Update User", class="btn btn-secondary"%>

<% end %>

    </div>
  </div>
</div>